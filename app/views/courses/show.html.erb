<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1><%= @course.title%></h1>
	<br />
	<div class="col-xs-12 col-sm-4 text-center">
		<span class="label label-default"><%= number_to_currency @course.cost %></span>
		<% if current_user && current_user == @course.user %> <!-- Why? current_user @ current_user == @course.user both work-->
		<br />
		<br />
		<%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
		<% end %>
	</div>
	<div class="col-xs-12 col-sm-4">
		<%= @course.description %>
	</div>
</div>